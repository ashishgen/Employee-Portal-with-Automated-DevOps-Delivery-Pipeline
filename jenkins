pipeline {
    environment {
        DOCKERHUB_CREDENTIALS = credentials("f5695906-dd0d-413f-9d0f-46c450826804")
    }
    agent {
        label "K-M"
    }
    stages {
        stage('Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ashishgen/Employee-Portal-with-Automated-DevOps-Delivery-Pipeline.git'
            }
        }
        stage('Docker') {
            steps {
                script {
                    // Build the Docker image
                    sh 'sudo docker build -t ashishpandey1991/employ:latest .'

                    // Login to Docker Hub using credentials
                    withCredentials([usernamePassword(credentialsId: 'f5695906-dd0d-413f-9d0f-46c450826804', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh 'sudo docker login -u $DOCKER_USER -p $DOCKER_PASS'
                    }

                    // Push the Docker image to Docker Hub
                    sh 'sudo docker push ashishpandey1991/employ'
                }
            }
        }
        stage('K-M') {
            steps {
                // Apply Kubernetes Deployment and Service
                sh 'kubectl config current-context'
                sh 'kubectl get nodes'
                sh "kubectl apply -f deploy.yaml"
                sh "kubectl apply -f service.yaml"
            }
        }
    }
}
